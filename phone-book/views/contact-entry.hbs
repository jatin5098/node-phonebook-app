<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <h2 class="text-center">Contact Entry</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <form method="post" action="/contact/save" enctype="multipart/form-data" class="form-horizontal">
                <div class="form-group row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <input type="text" class="form-control" name="name" placeholder="Name" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <input type="text" class="form-control" name="company" placeholder="Company" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-xs-4 col-sm-4 col-md-4">
                        <input type="text" class="form-control" name="phoneType" placeholder="Phone Type" />
                    </div>
                    <div class="col-xs-8 col-sm-8 col-md-8">
                        <input type="text" class="form-control" name="phoneNumber" placeholder="Phone Number" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-xs-4 col-sm-4 col-md-4">
                        <input type="text" class="form-control" name="emailType" placeholder="Email Type" />
                    </div>
                    <div class="col-xs-8 col-sm-8 col-md-8">
                        <input type="text" class="form-control" name="emailAddress" placeholder="Email Addrress" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12 col-md-12">
                        <input type="text" class="form-control" name="group" placeholder="Group" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-xs-4 col-sm-4 col-md-4">
                        <input type="text" class="form-control" name="urlType" placeholder="Url Type" />
                    </div>
                    <div class="col-xs-8 col-sm-8 col-md-8">
                        <input type="text" class="form-control" name="urlAddress" placeholder="Url Address" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <input type="file" class="form-control" name="pic" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-xs-12 col-sm-12 col-md-12 text-center">
                        <input type="submit" class="btn btn-primary" value="Add Contact" />
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>