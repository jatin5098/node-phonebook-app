<div class="container-fluid contacts-list">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <h2 class="text-center">Contacts</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
            {{# if contacts.length}} {{# each contacts}}
            <form method="post" action="/contact/edit">
                <div>
                    <a href="/contact/edit/{{this._id}}">Edit</a>
                    <input type="hidden" name="contactId" value="{{ this._id }}" />
                    <input type="submit" name="editDetails" value="Modify" />
                </div>
                <div class="row my-contact">
                    <div class="col-xs-4 col-sm-4 col-md-4">
                        <div class="contact-pic">
                            <img src="{{__dirname}}/uploads/dp/{{this.pic}}" class="img img-responsive img-thumbnail" />
                        </div>
                    </div>
                    <div class="col-xs-8 col-sm-8 col-md-8">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 contact-name">{{this.name}}</div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 contact-name">
                                {{# each this.phone}}
                                <div class="contact-number">{{this.value}}</div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>

                {{!--
                <div class="my-contact">
                    <div class="contact-pic">
                        <img src="{{__dirname}}/uploads/dp/{{this.pic}}" />
                    </div>
                    <div class="contact-company">{{this.company}}</div>
                    {{# each this.phone}}
                    <div class="contact-number">{{this.type}}</div>
                    <div class="contact-number">{{this.value}}</div>
                    {{/each}} {{# each this.email}}
                    <div class="contact-email">{{this.type}}</div>
                    <div class="contact-email">{{this.value}}</div>
                    {{/each}}
                    <div class="contact-group">{{this.group}}</div>
                    {{# each this.url}}
                    <div class="contact-url">{{this.type}}</div>
                    <div class="contact-url">{{this.value}}</div>
                    {{/each}}
                </div>--}}
            </form>
            {{/each}} {{ else }}
            <div>
                <p>Contact List is empty.</p>
            </div>
            {{/if}}
        </div>
    </div>

</div>